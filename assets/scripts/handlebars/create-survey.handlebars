<h1 class="create-survey-title">Create Your Survey</h1>
<form class="form-basic" method="post" action="#">

  <div class="form-row">
    <label>
      <span>Survey Title</span>
      <input type="text" name="name">
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Survey Question</span>
      <input type="email" name="email">
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Dropdown</span>
      <select name="dropdown">
        <option>Survey Type 1</option>
        <option>Survey Type 2</option>
        <option>Survey Type 3</option>
      </select>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Textarea</span>
      <textarea name="textarea"></textarea>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Checkbox</span>
      <input type="checkbox" name="checkbox" checked>
    </label>
  </div>

  <div class="form-row">
    <label><span>Radio</span></label>
    <div class="form-radio-buttons">

      <div>
        <label>
          <input type="radio" name="radio">
          <span>Radio option 1</span>
        </label>
      </div>

      <div>
        <label>
          <input type="radio" name="radio">
          <span>Radio option 2</span>
        </label>
      </div>

      <div>
        <label>
          <input type="radio" name="radio">
          <span>Radio option 3</span>
        </label>
      </div>

    </div>
  </div>

  <div class="form-row">
    <button type="submit" class="btn btn-info">Take It A'vey!</button>
  </div>

</form>
