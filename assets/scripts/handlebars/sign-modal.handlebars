
<form id="register" name="register">
  <fieldset class="form-group">
    <label>Email</label>
    <input name="credentials[email]" type="text" class="form-control" placeholder="Email">
  </fieldset>
  <fieldset class="form-group">
    <label>Password</label>
    <input name="credentials[password]" type="password" class="form-control" placeholder="Password">
  </fieldset>
  <fieldset class="form-group">
    <label>Confirm Password</label>
    <input name="credentials[password]" type="password" class="form-control" placeholder="Confirm Password">
  </fieldset>
  <div class="modal-footer">
    <button type="submit" class="btn btn-primary">Register</button>
    <div class='warning'>Orange</div> <!--Needs inline elements -->
    <div class='error'>RED</div><!--Needs inline elements -->
  </div>
</form>
